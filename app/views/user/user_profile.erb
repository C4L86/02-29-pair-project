<div class="container">

  <h1>Hello, <%= @user.name %></h1>

  <ul class="nav nav-tabs">
    <% if @user.name == "admin" %>
        <li role="presentation"><a href="/admin_home">Admin Home</a></li>
    <% else %>
    <% end %>
    <li role="presentation"><a href="/game_search">Search Games</a></li>
    <li role="presentation" class="active"><a href="/game_library">Game Library</a></li>
    <li role="presentation"><a href="/logout_user/<%= @user.id %>">Log Out</a>
    </li>
  </ul>

  <p>
    <strong>User Name:</strong>
    <br />
    <%= @user.name %>
    <br />
    <strong>Email:</strong>
    <br />
    <%= @user.email %>
    <br />
    <strong>Date of Birth:</strong>
    <br />
    <%= @user.dob %>
    <br />
  </p>

  <div class="btn-group btn-group-sm" role="group" aria-label="...">
    <button type="button" class="btn btn-default"><a href="/user_update" >Update</a></button>
    <button type="button" class="btn btn-default"><a href="/user_delete">Delete</a></button>
  </div>

</div>