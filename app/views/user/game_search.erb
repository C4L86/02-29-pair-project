<div class="container">

  <h1>Game Search</h1>

  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="">Search Games</a>
    <li role="presentation"><a href="/game_library">Game Library</a></li>
    <li role="presentation"><a href="/user_profile">Your Profile</a></li>
    <li role="presentation"><a href="/logout_user/<%= @user.id %>">Log Out</a></li>
  </ul>

  <br />

  <p>
    <form action="/process_game_search" method="post">
    <fieldset>
      Title:
      <br />
      <input type="text" name="title">
      <br />
      Genre:
      <br />  
      <select name="genre" class="custom-select">
        <option disabled hidden selected>...</option>
        <option value="Conquest">Conquest</option>
        <option value="Word">Word</option>
        <option value="Adventure">Adventure</option>
        <option value="Negotiation">Negotiation</option>
        <option value="Memory">Memory</option>
        <option value="Trivia">Trivia</option>
      </select>
      <br />
      Age Group:
      <br />
      <select name="age_group" class="custom-select">
        <option disable hidden selected>...</option>
        <option value="8">8+</option>
        <option value="10">10+</option>
        <option value="12">12+</option>
        <option value="13">13+</option>
        <option value="14">14+</option>
        <option value="18">18+</option>
      </select>
      <br />
      Minimum Player Count:
      <br />
      <select name="min_players" class="custom-select">
        <option disable hidden selected>...</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
      </select>
      <br />
      Maximum Player Count:
      <br />
      <select name="max_players" class="custom-select">
        <option disable hidden selected>...</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
        <option value="">Any</option>
      </select>
      <br />
      Maximum Play Time:
      <div class="row">
        <div class="col-xs-2">
          <div class="input-group">
            <input type="text" class="form-control" name="max_playtime" aria-describedby="basic-addon2">
            <span class="input-group-addon" id="basic-addon2">minutes</span>
          </div>
        </div>
      </div>

      <br />
      <p>
      <br />
      <button type="submit" class="btn btn-sm btn-default">Search Game</button>
      </p>
    </fieldset>
    </form>
  </p>

