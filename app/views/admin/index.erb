<h1>Games Library</h1>

  <% if @user.name == "admin" %>
    <a href="/game_create">Add Games</a>
  <% else %>
  <% end %>
  
<% @games.each do |game| %>
  <p>
  <ul>
    <li>Title: <%= game.title %></li>
    <li>Genre: <%= game.genre %></li>
    <li>Age Group: <%= game.age_group %></li>
    <li>Min Players: <%= game.min_players %></li>
    <li>Max Players: <%= game.max_players %></li>
    <li>Description: <%= game.description %></li>
    <li>Play Time (min): <%= game.play_time %></li>
    <li>Publisher: <%= game.publisher %></li>
    <li>Price: $<%= game.price %></li>
  </ul>

  <% if @user.name == "admin" %>
    <a href="/game_update/<%= game.id %>">update</a>
    <a href="/games_delete/<%= game.id %>">delete</a>
  <% else %>
  <% end %>
  </p>
<% end %>