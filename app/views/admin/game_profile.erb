<div class="container">

  <center><h1>"<%= @game.title %>" Profile</h1></center>

  <ul class="nav nav-tabs">
    <li role="presentation"><a href="/game_library">Game Library</a>
    <li role="presentation"><a href="/game_search">Search Games</a>
    <li role="presentation"><a href="/logout_user/<%= @user.id %>">Log Out</a>
    </li>
  </ul>

  <center>
  <img src="<%= @game.image %>" title="<%= @game.title %>" height="300" width="300">
  </center>
  <br />
    
  <ul>
    <li><strong>Title:</strong> <%= @game.title %></li>
    <li><strong>Genre:</strong> <%= @game.genre %></li>
    <li><strong>Age Group:</strong> <%= @game.age_group %>+</li>
    <li><strong>Min Players:</strong> <%= @game.min_players %></li>
    <li><strong>Max Players:</strong> <%= @game.max_players %></li>
    <li><strong>Description:</strong> <%= @game.description %></li>
    <li><strong>Play Time:</strong> <%= @game.min_playtime %> to <%= @game.max_playtime %> minutes</li>
    <li><strong>Publisher:</strong> <%= @game.publisher %></li>
    <li><strong>Price:</strong> $<%= @game.price %></li>
  </ul>

</div>